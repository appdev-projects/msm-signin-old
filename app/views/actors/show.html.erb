<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Actor #<%= @actor.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/actors" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">

      </div>

      <div class="col">
        <a href="/delete_actor/<%= @actor.id %>" class="btn btn-block btn-outline-secondary">
          Delete actor
        </a>
      </div>
    </div>

    <div>
      <h1>
        Edit actor #<%= @actor.id %>
      </h1>

      <hr>

      <form action="/modify_actor/<%= @actor.id %>" method="post">

        <div class="form-group">
          <label for="name">
            Name
          </label> 
          <input type="text" id="name" name="qs_name" class="form-control" value="<%= @actor.name %>">
        </div>
            
        <div class="form-group">
          <label for="dob">
            Dob
          </label>
          <input type="text" id="dob" name="qs_dob" class="form-control" value="<%= @actor.dob %>">
        </div>
            
        <div class="form-group">
          <label for="bio">
            Bio
          </label>       
        <textarea id="bio" name="qs_bio" class="form-control" rows="3"><%= @actor.bio %></textarea>
        </div>
            
        <div class="form-group">
          <label for="image_url">
            Image
          </label>
          <input type="text" id="image_url" name="qs_image_url" class="form-control" value="<%= @actor.image_url %>">
        </div>
            
        <button class="btn btn-block btn-outline-secondary">
          Update actor
        </button>
      </form>

      <hr>
    </div>
    <table border="1">
      <tr>
        <th>
          Name
        </th>

        <th>
          Dob
        </th>
        
        <th>
          Image Url
        </th>

        <th>
          Bio
        </th>

      </tr>
      <tr>
        <td>
          <%= @actor.name %>
        </td>

        <td>
          <%= @actor.dob %>
        </td>

        <td>
          <img src="<%= @actor.image_url %>">
        </td>
        <td>
          <%= @actor.bio %>
        </td>
      </tr>
    </table>
  </div>
  <hr>
  <h3>Filmography</h3>
  <table border="1">
  <tr>
    <th>
      Title
    </th>

    <th>
      Year
    </th>
    
    <th>
      Duration
    </th>

    <th>
      Description
    </th>


    <th>
      Image Url
    </th>

    <th>
      Director
    </th>

  </tr>
  <% @actor.filmography.each do |movie| %>
  <tr>
    <td>
      <%= movie.title %>
    </td>

    <td>
      <%= movie.year %>
    </td>

    <td>
      <%= movie.duration %>
    </td>
    <td>
      <%= movie.description %>
    </td>
    <td>
      <img src="<%= movie.image_url %>">
    </td>
    <td>
      <%= movie.director.name %>
    </td>
  </tr>
  <% end %>
</table>
</div>
  <h3>Characters</h3>
  <table border="1">
      <tr>
        <th>
          Name
        </th>

        <th>
          Movie
        </th>

      </tr>
    <% @actor.characters.each do |character| %>
      <tr>
        <td>
          <%= character.name %>
        </td>
        <td>
          <%= character.movie.title %>
        </td>
      </tr>
    <% end %>
      <hr>
  </table>
