<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      List of all actors
    </h1>

    <a href="/movies">All Movies</a>
    <a href="/directors">All Directors</a>
    <a href="/actors">All Actors</a>

    <h2>
      Add a new actor
    </h2>

    <hr>

    <form action="/insert_actor" method="post">
      <div class="form-group">
        <label for="name">
          Name
        </label>

        <input type="text" id="name" name="qs_name" class="form-control">
      </div>

      <div class="form-group">
      <label for="dob">
        Dob
      </label>
        <input type="text" id="dob" name="qs_dob" class="form-control">
      </div>

    
      <div class="form-group">
        <label for="bio">
          Bio
        </label>
        <textarea id="bio" name="qs_bio" class="form-control" rows="3"></textarea>
      </div>

      <div class="form-group">
      <label for="image_url">
        Image
      </label>

        <input type="text" id="image_url" name="qs_image_url" class="form-control">
      </div>
    
      <button class="btn btn-block btn-outline-secondary">
        Create actor
      </button>
    </form>

    <hr>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table border="1" class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Dob
        </th>

        <th>
          Bio
        </th>

        <th>
          Image
        </th>
        <th>
        </th>
      </tr>

      <% @actors.each do |actor| %>
      <tr>
        <td>
          <%= actor.id %>
        </td>

        <td>
          <%= actor.name %>
        </td>

        <td>
          <%= actor.dob %>
        </td>

        <td>
          <%= actor.bio %>
        </td>

        <td>
          <img src="<%= actor.image_url %>">
        </td>

        <td>
          <a href="/actors/<%= actor.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
